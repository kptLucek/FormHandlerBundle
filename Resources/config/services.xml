<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="lucek_form.repository.class">Lucek\FormHandlerBundle\Repository\FormHandlerRepository</parameter>
        <parameter key="lucek_form.matcher.class">Lucek\FormHandlerBundle\Matcher\FormHandlerMatcher</parameter>
        <parameter key="lucek_form.validation_extractor.class">Lucek\FormHandlerBundle\Validation\FormValidationExtractor</parameter>
        <parameter key="lucek_form.form_handler_result_factory.class">Lucek\FormHandlerBundle\Factory\FormHandleResultFactory</parameter>
        <parameter key="lucek_form.root_handler.class">Lucek\FormHandlerBundle\Handler\RootFormHandler</parameter>
    </parameters>

    <services>
        <service id="lucek_form.form_handler_result_factory" class="%lucek_form.form_handler_result_factory.class%" alias="Lucek\FormHandlerBundle\Repository\FormHandlerRepositoryInterface">
            <argument type="service" id="@lucek_form.validation_extractor"/>
        </service>
        <service id="lucek_form.validation_extractor" class="%lucek_form.validation_extractor.class%" alias="Lucek\FormHandlerBundle\Matcher\FormHandlerMatcherInterface"/>
        <service id="lucek_form.repository" class="%lucek_form.repository.class%" alias="Lucek\FormHandlerBundle\Validation\FormValidationExtractorInterface"/>
        <service id="lucek_form.matcher" class="%lucek_form.matcher.class%" alias="Lucek\FormHandlerBundle\Factory\FormHandleResultFactoryInterface">
            <argument type="service" id="@lucek_form.repository"/>
        </service>
        <service id="lucek_form.root_handler" class="%lucek_form.root_handler.class%" alias="Lucek\FormHandlerBundle\Handler\RootFormHandlerInterface">
            <argument type="service" id="@lucek_form.matcher"/>
            <argument type="service" id="@form.factory"/>
            <argument type="service" id="@lucek_form.form_handler_result_factory"/>
            <argument type="service" id="@event.dispatcher"/>
        </service>
    </services>
</container>